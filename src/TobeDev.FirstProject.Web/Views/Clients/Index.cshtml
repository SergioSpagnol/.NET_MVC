@using TobeDev.FirstProject.Web.Models.Clients;
@model ClientListViewModel


<h1>Lista de Clientes</h1>
<a class="btn btn-primary" href="@Url.Action("Client","Clients",new {id = 0})">Adicionar Cliente</a>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Clients.Any())
            {
                foreach (var client in Model.Clients)
                {
                    <tr>
                        <th scope="row">@client.Id</th>
                        <td>@client.FirstName</td>
                        <td>@client.LastName</td>
                        <td>@client.BirthDate</td>
                        <td>
                            <a href="@Url.Action("Client","Clients",new {id = client.Id})" title="Editar">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a href="@Url.Action("Delete","Clients",new {id = client.Id})" title="Excluir">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                         </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>